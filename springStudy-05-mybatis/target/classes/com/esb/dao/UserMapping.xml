<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间，绑定一个dao-->
<mapper namespace="com.esb.dao.UserMapping">

    <select id="getUserDaoList" resultType="user" >
    select * from mybatisdemo
    </select>
    <select id="getUserDaoById" resultType="User" parameterType="int">
    select * from mybatisdemo where id = #{id}
    </select>
    <insert id="insertUser" parameterType="User" >
        insert into mybatisdemo(id,name,pwd) values (#{id},#{name},#{pwd})
    </insert>
    <update id="updateUser" parameterType="User" >
        update mybatisdemo set name =#{name},pwd = #{pwd} where id = #{id}
    </update>
    <delete id="deleteUserById" parameterType="int" >
        delete from  mybatisdemo where id = #{id}
    </delete>
    <delete id="deleteUser" parameterType="User">
        delete  from mybatisdemo where id = #{id}
    </delete>

</mapper>